<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_folder_cover"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/icon_folder_default"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_folder_cover"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/layout_folder_cover"
        android:layout_centerVertical="true"
        android:text="所有图片"
        android:textSize="14dp"
        android:textColor="#333333" />

    <ImageView android:id="@+id/img_checked"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:scaleType="centerInside" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19000000"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
